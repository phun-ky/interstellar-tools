{
  "$schema": "https://typedoc-plugin-markdown.org/schema.json",
  "plugin": [
    "typedoc-plugin-markdown",
    "typedoc-plugin-remark",
    "typedoc-plugin-mdn-links",
    "typedoc-plugin-rename-defaults",
    "typedoc-vitepress-theme"
  ],

  "entryPointStrategy": "packages",
  "entryPoints": ["packages/*"],

  "packageOptions": {
    "excludeInternal": true,
    "sort": ["kind", "instance-first", "alphabetical-ignoring-documents"],
    "entryPoints": ["src/index.ts"],
    "includeVersion": true
  },
  "out": "docs/api",

  "docsRoot": "./docs",
  "tsconfig": "./tsconfig.base.json",
  "githubPages": false,
  "hideGenerator": true,
  "gitRevision": "main",
  "navigationLinks": {
    "GitHub": "https://github.com/phun-ky/interstellar-tools"
  },
  "navigation": {
    "includeCategories": false,
    "includeGroups": true,
    "includeFolders": true,
    "compactFolders": false,
    "excludeReferences": true
  },
  "readme": "./docs/public/README.md",
  "indexFormat": "table",
  "interfacePropertiesFormat": "list",
  "classPropertiesFormat": "table",
  "expandParameters": true,
  "strikeDeprecatedPageTitles": true,
  "enumMembersFormat": "table",
  "typeDeclarationFormat": "table",
  "propertyMembersFormat": "table",
  "parametersFormat": "table",
  "expandObjects": true,
  "useCodeBlocks": true,
  "excludeInternal": true,
  "remarkPlugins": [
    "unified-prettier",
    ["remark-math"],
    [
      "remark-github",
      { "repository": "https://github.com/phun-ky/interstellar-tools" }
    ],
    ["remark-toc", { "heading": "Table of Contents", "maxDepth": 3 }]
  ]
}
